<%= javascript_include_tag  "all" %>
</head>

<body class="<%= page_classes %>">
  <%= partial 'shared/header' %>

  <div class="layout">
    <div class="l-constrained">
      <main role="main">
        <%= yield %>
      </main>

      <%= partial 'shared/sidebar' %>
    </div>
  </div>

  <%= partial 'shared/footer' %>
